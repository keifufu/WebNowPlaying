{
  "manifest_version": 3,
  "name": "WebNowPlaying Redux",
  "short_name": "WebNowPlaying Redux",
  "description": "Ever wished music info from your web browser could be used in Rainmeter? Well now it can!",
  "version": "1.0.0",
  "icons": {
    "128": "icons/icon-darkmode-128.png",
    "256": "icons/icon-darkmode-256.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "WebNowPlaying Redux"
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["sw.js"]
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id": "webnowplayingredux@keifufu.dev",
      "strict_min_version": "109.0"
    }
  }
}
